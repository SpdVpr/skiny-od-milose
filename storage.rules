rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Pravidla pro skin screenshoty
    match /skins/{skinId}/{fileName} {
      // Čtení: Všichni mohou číst obrázky
      allow read: if true;

      // Zápis: Prozatím povoleno všem pro testování
      // Omezení: Max 10MB, pouze obrázky
      allow write: if request.resource.size < 10 * 1024 * 1024  // Max 10MB
        && request.resource.contentType.matches('image/.*');

      // Smazání: Prozatím povoleno všem
      allow delete: if true;

      // TODO: Po spuštění změnit na:
      // allow write, delete: if request.auth != null
      //   && request.auth.token.admin == true;
    }

    // Defaultně zakázat vše ostatní
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

